  Layout = "_Layout";
}

<h2>Specialties:</h2>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var specialty in Model)
    {
      <li><a href='/specialties/@specialty.Id'>@specialty.Name</a></li>
    }
  </ul>
}

