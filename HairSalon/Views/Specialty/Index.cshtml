@{
  Layout = "_Layout";
}

<title>Specialties!</title>
<div class="jumbotron">
  <h1>Specialties:</h1>
</div>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var specialty in Model)
    {
      <li><a href='/specialties/@specialty.Id'><button class="btn btn-info">@specialty.Type</button></a></li>
    }
  </ul>
}

<hr>

<div class="text-center">
  <a href="/specialties/new"><button class="btn btn-secondary">Add new specialty</button></a><a href='/stylists'><button class="btn btn-secondary">View stylists!</button></a> <a href="/"><button class="btn btn-secondary">Return home!</button></a>
  <br><br>

</div>
