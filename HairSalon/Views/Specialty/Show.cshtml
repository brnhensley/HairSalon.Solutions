@using HairSalon.Models;

@{
  Layout = "_Layout";
}

<title>@Model["specialty"].Type</title>

<div class="container">
  <div class="jumbotron">
    <h1>@Model["specialty"].Type specialists:</h1>
  </div>

  <div class="row">
    <div class="col-md-6">
      @if(Model["specialtyStylists"].Count == 0)
      {
        <h3>No specialties have been added yet!</h3>
      }

      @if(Model["specialtyStylists"].Count != 0)
      {
        <h4>Stylists who specialize in @Model["specialty"].Type</h4>
        <ul>
          @foreach (var stylist in @Model["specialtyStylists"])
          {
            <li>
              <a href="/stylists/@stylist.Id"><button class="btn btn-info">@stylist.Name</button></a>
            </li>
          }
        </ul>
      }
    </div>

    <div class="col-md-6">
      <h4>Add a stylist to this specialty:</h4>
      <form action='/specialties/@Model["specialty"].Id/stylists/new' method='post'>
        <label for='stylistId'>Select a stylist</label>
        <select id='stylistId' name='stylistId' type='text'>
          @foreach (var stylist in @Model["allStylists"])
          {
            <option value='@stylist.Id'>@stylist.Name</option>
          }
        </select>
        <button type='submit' class="btn btn-secondary">Add</button>
      </form>
    </div>
  </div>

  <hr>

