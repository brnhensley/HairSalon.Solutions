<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>The Stooge Stylists</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>The @Model.Count Stooge Stylists</h1>
      <em>Click on a Stooge to see their clients:</em>
    </div>
    @if (Model.Count == 0)
    {
      <p>There are no Stooges!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (var stylist in Model)
      {
        <li><a href='/stylists/@stylist.Id'>@stylist.Name</a></li>
      }
    }
  </div>
</body>
</html>
